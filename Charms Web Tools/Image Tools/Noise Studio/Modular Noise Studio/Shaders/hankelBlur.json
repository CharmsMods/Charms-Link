        {"type":"range","id":"hankelBlurRadius","label":"Radius","min":1,"max":50,"step":0.5,"default":5.0},
        {"type":"range","id":"hankelBlurQuality","label":"Quality","min":4,"max":32,"step":1,"default":16}
