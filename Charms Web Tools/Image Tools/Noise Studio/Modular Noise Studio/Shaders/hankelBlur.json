    "mask": {
        "colorExclude": {
            "enableId": "hankelColorExclude",
            "colorId": "hankelExcludeColor",
            "toleranceId": "hankelColorTolerance",
            "fadeId": "hankelColorFade"
        },
        "lumaMask": {
            "enableId": "hankelLumaMask",
            "shadowThresholdId": "hankelShadowThreshold",
            "shadowFadeId": "hankelShadowFade",
            "highlightThresholdId": "hankelHighlightThreshold",
            "highlightFadeId": "hankelHighlightFade",
            "highlightThresholdDefault": 1,
            "highlightFadeDefault": 0.1
        },
        "invertId": "hankelInvertMask"
