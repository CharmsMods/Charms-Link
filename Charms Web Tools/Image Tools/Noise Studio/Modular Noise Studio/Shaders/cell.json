{
    "name": "Cell Shading",
    "controls": [
        {"type":"checkbox","id":"cellEnable","label":"Enable","default":false},
        {"type":"range","id":"cellLevels","label":"Shading Levels","min":2,"max":12,"step":1,"default":4},
        {"type":"range","id":"cellBias","label":"Contrast Bias","min":-1,"max":1,"step":0.01,"default":0},
        {"type":"range","id":"cellGamma","label":"Gamma","min":0.1,"max":3,"step":0.01,"default":1},
        {"type":"select","id":"cellQuantMode","label":"Quantization Mode","options":[
            {"value":"0","label":"Luminance","selected":true},
            {"value":"1","label":"Per-Channel"},
            {"value":"2","label":"HSV Value"}
        ]},
        {"type":"select","id":"cellBandMap","label":"Band Mapping","options":[
            {"value":"0","label":"Linear","selected":true},
            {"value":"1","label":"Smooth"},
            {"value":"2","label":"Hard"}
        ]},
        {"type":"select","id":"cellEdgeMethod","label":"Edge Method","options":[
            {"value":"0","label":"Sobel","selected":true},
            {"value":"1","label":"Roberts Cross"},
            {"value":"2","label":"Laplacian"}
        ]},
        {"type":"range","id":"cellEdgeStr","label":"Edge Strength","min":0,"max":200,"step":1,"default":50},
        {"type":"range","id":"cellEdgeThick","label":"Edge Thickness","min":0.5,"max":5,"step":0.1,"default":1},
        {"type":"range","id":"cellColorPreserve","label":"Color Preserve","min":0,"max":100,"step":1,"default":50},
        {"type":"checkbox","id":"cellEdgeEnable","label":"Show Edges","default":true}
    ]
}
