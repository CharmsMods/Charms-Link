{
    "name": "Bilateral Filter",
    "controls": [
        {"type":"checkbox","id":"bilateralEnable","label":"Enable","default":false},
        {"type":"range","id":"bilateralRadius","label":"Radius","min":1,"max":10,"step":1,"default":3},
        {"type":"range","id":"bilateralColorSig","label":"Sigma Color","min":0.01,"max":1.0,"step":0.01,"default":0.1},
        {"type":"range","id":"bilateralSpatialSig","label":"Sigma Space","min":0.5,"max":10.0,"step":0.1,"default":3.0},
        {"type":"select","id":"bilateralKernel","label":"Kernel","options":[
            {"value":"0","label":"Gaussian","selected":true},
            {"value":"1","label":"Box"}
        ]},
        {"type":"select","id":"bilateralEdgeMode","label":"Edge Mode","options":[
            {"value":"0","label":"Clamp","selected":true},
            {"value":"1","label":"Mirror"}
        ]},
        {"type":"range","id":"bilateralIter","label":"Iterations","min":1,"max":10,"step":1,"default":1}
    ],
    "mask": {
        "colorExclude": {
            "enableId": "bilateralColorExclude",
            "colorId": "bilateralExcludeColor",
            "toleranceId": "bilateralColorTolerance",
            "fadeId": "bilateralColorFade",
            "eyedropper": false
        },
        "lumaMask": {
            "enableId": "bilateralLumaMask",
            "shadowThresholdId": "bilateralShadowThreshold",
            "shadowFadeId": "bilateralShadowFade",
            "highlightThresholdId": "bilateralHighlightThreshold",
            "highlightFadeId": "bilateralHighlightFade"
        }
    }
}
